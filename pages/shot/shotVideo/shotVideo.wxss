/* pages/shot/shotVideo/shotVideo.wxss */
page{width: 100%;height: 100%;}
.cover-view{z-index: 3;}
.progressBarBottom{width: 720rpx;height: 14rpx;border-radius: 14rpx;background: rgba(255, 255, 255, .6);position: absolute;top: 14rpx;left: 15rpx;}
.progressBarTop{height: 14rpx;border-radius: 14rpx;background: #8050eb;}
.recordBtn{width: 148rpx;height: 148rpx;background: #e36159;border-radius: 50%;position: absolute;bottom: 100rpx;left: 301rpx;}
.recordBtnText{font-size: 34rpx;color: #fff;line-height: 148rpx;text-align: center;display: inline-block;height: 148rpx;width: 148rpx;}
.recordBtnAfter{width: 210rpx;height: 210rpx;border-radius: 50%;background: rgba(255, 255, 255, .1);position: absolute;bottom: 48rpx;border: 20rpx solid #e36159;left: 250rpx;}
.recordBtnIn{width: 120rpx;height: 120rpx;border-radius: 50%;background: #e36159;margin: 45rpx auto;}
video .toNextPage{position: absolute;top: 40rpx;right: 40rpx;width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;background: #8050eb;font-size: 28rpx;}
video .btn,camera .btn{width: 148rpx;height: 112rpx;line-height: 112rpx;text-align: center;display: flex;flex-direction: column;justify-content: space-around;position: absolute;bottom: 118rpx;align-items: center;}
camera .leftBtn{left: 76rpx;}
camera .rightBtn{right: 76rpx;}
video .btn .cover-view{font-size: 32rpx;}
.screenImage{width: 100%;height: 100%;}
.operationView{width: 100%;position: absolute;bottom: 0;left: 0;display: flex;flex-direction: column-reverse;justify-content: flex-end;height: 100%;}
.bottomBtns{display: flex;flex-direction: row;justify-content: space-around;position: absolute;bottom: 40rpx;width: 676rpx;left: 37rpx;}
.bottomBtns .btn{width: 320rpx;height: 100rpx;border-radius: 10rpx;line-height: 100rpx;text-align: center;font-size: 32rpx;}
.bottomBtns .btn image{width: 40rpx;height: 40rpx;margin-right: 20rpx;vertical-align: middle;}
.bottomBtns .leftBtn{background: rgba(255,255,255,.8);color: #666;} 
.bottomBtns .rightBtn{background: #8050eb;color: #fff;}
.videoInfoInput{width: 676rpx;height: 300rpx;margin: 0 auto;position: absolute;bottom: 126rpx;left: 37rpx;}
.videoInfoInput .goodsDesc{font-size: 34rpx;color: #999;height: 94rpx;line-height: 94rpx;border-bottom: 2rpx solid #fff;}
.videoInfoInput .goodsName{font-size: 30rpx;color: #e36159;height: 100rpx;line-height: 40rpx;position: relative;margin-top: 20rpx;text-indent: 40rpx;}
.videoInfoInput .goodsIcon{width: 32rpx;height: 32rpx;position: absolute;bottom: 150rpx;left: 0;}