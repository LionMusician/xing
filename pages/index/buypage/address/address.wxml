<!--pages/index/buypage/address/address.wxml-->

<view class='container'>
  <view class='cells'>
    <view class='cell'>
      <view class='cell_hd'>收件人：</view>
      <view class='cell_bd'>
      <input bindinput='listenReceiver'></input>
      </view>
    </view>
    <view class='cell'>
      <view class='cell_hd'>手机号码：</view>
      <input bindinput='listenTel' type='number'></input>
    </view>
    <view class='cell cellLast'>
      <view class='cell_hd'>收货地址</view>
      <view class='cell_ft'></view>
    </view>
    <view class='cell cellLast'>
      <input placeholder='请输入详细地址，如xx省xx市xx区' placeholder-style='font-size:28rpx;color:#999;' style='width:100%;' bindinput='listenAddress'></input>
    </view>
  </view>
</view>
<view class='bottomBtn' bindtap='submit'>保存</view>
