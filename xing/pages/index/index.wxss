/**index.wxss**/
@import "../../template/goodsView.wxss";
.container{height: 100%;width: 100%;}
swiper{height: 100%;}
swiper-item>view{height: 100%;position: relative;}
.searchBtn{position: absolute;top: 0;right: 0;}
.searchBtn image{width: 43rpx;height: 42rpx;padding: 40rpx;}
.funBtns{display: flex;flex-direction: column;justify-content: center;width: 80rpx;font-size: 26rpx;color: #fff;position: absolute;bottom: 180rpx;right: 40rpx;}
.funBtns .tip{width: 100%;text-align: center;}
.funBtns .tip image{margin: 60rpx auto 20rpx;}
.videoInfo{width: 500rpx;position: absolute;bottom: 140rpx;left: 40rpx;}
.videoInfo .userLogo{position: relative;}
.videoInfo .userLogo .userPic{width: 84rpx;height: 84rpx;border-radius: 50%;margin: 0 20rpx 16rpx 0rpx;vertical-align: middle;}
.videoInfo .userLogo .follow{width: 32rpx;height: 32rpx;position: absolute;top: 68rpx;left: 26rpx;}
.videoInfo .userLogo text{font-size: 26rpx;color: #fff;}
.videoInfo .brandName{font-size: 28rpx;color: #e36159;padding: 40rpx 40rpx 40rpx 0;}